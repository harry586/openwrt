# OpenWrt 正常模式配置 - 旧版本兼容
# 针对OpenWrt 19.07/21.02等旧版本，使用兼容的软件包

# 基础系统包
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_iptables-mod-extra=y

# 基础网络包
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
CONFIG_PACKAGE_kmod-ppp=y
CONFIG_PACKAGE_kmod-pppoe=y

# 基础LuCI配置
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-base-en=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_luci-proto-ppp=y
CONFIG_PACKAGE_luci-compat=y

# IPv6 支持
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_6in4=y
CONFIG_PACKAGE_6rd=y
CONFIG_PACKAGE_6to4=y
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_ip6tables-mod-nat=y
CONFIG_PACKAGE_kmod-ip6tables=y
CONFIG_PACKAGE_kmod-ipt-nat6=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

# 存储相关
CONFIG_PACKAGE_automount=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y
CONFIG_PACKAGE_kmod-nls-utf8=y

# 网络服务 - 旧版本兼容组件
CONFIG_PACKAGE_samba=y           # Samba文件共享（旧版本使用samba）
CONFIG_PACKAGE_luci-app-samba=y  # Samba Web界面
CONFIG_PACKAGE_vsftpd=y          # FTP服务器
CONFIG_PACKAGE_luci-app-vsftpd=y # FTP Web界面
CONFIG_PACKAGE_smartdns=y        # 智能DNS
CONFIG_PACKAGE_luci-app-smartdns=y # 智能DNS Web界面
CONFIG_PACKAGE_luci-app-upnp=y   # UPnP自动端口映射
CONFIG_PACKAGE_luci-app-turboacc=y # 网络加速
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_flow-offload=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_shortcut-fe=y
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_dnsforwarder=y
CONFIG_PACKAGE_luci-app-arpbind=y
CONFIG_PACKAGE_luci-app-cpulimit=y
CONFIG_PACKAGE_luci-app-wechatpush=y
CONFIG_PACKAGE_luci-app-sqm=y    # SQM智能限速（旧版本）
CONFIG_PACKAGE_sqm-scripts=y     # SQM脚本
CONFIG_PACKAGE_luci-app-hd-idle=y
CONFIG_PACKAGE_luci-app-familycloud=y

# KMS激活服务
CONFIG_PACKAGE_luci-app-vlmcsd=y

# 磁盘管理
CONFIG_PACKAGE_luci-app-diskman=y

# 家长控制
CONFIG_PACKAGE_luci-app-parentcontrol=y

# 中文语言包
CONFIG_PACKAGE_luci-i18n-turboacc-zh-cn=y
CONFIG_PACKAGE_luci-i18n-samba-zh-cn=y
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y
CONFIG_PACKAGE_luci-i18n-smartdns-zh-cn=y

# OpenWrt 正常模式配置 - 新版本优化
# 针对OpenWrt 23.05+等新版本，使用新特性和软件包

# 基础系统包 - 系统核心组件
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_iptables-mod-extra=y

# 基础网络包
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
CONFIG_PACKAGE_kmod-ppp=y
CONFIG_PACKAGE_kmod-pppoe=y

# 基础LuCI配置 - 包含完整中文支持
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-i18n-base-en=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-i18n-firewall-zh-cn=y
CONFIG_PACKAGE_luci-proto-ipv6=y
CONFIG_PACKAGE_luci-proto-ppp=y
CONFIG_PACKAGE_luci-compat=y

# IPv6 支持 - 完整的IPv6功能
CONFIG_PACKAGE_ipv6helper=y        # IPv6助手
CONFIG_PACKAGE_6in4=y              # 6in4隧道
CONFIG_PACKAGE_6rd=y               # 6rd隧道
CONFIG_PACKAGE_6to4=y              # 6to4隧道
CONFIG_PACKAGE_ip6tables=y         # IPv6防火墙
CONFIG_PACKAGE_ip6tables-mod-nat=y # IPv6 NAT支持
CONFIG_PACKAGE_kmod-ip6tables=y    # IPv6内核模块
CONFIG_PACKAGE_kmod-ipt-nat6=y     # IPv6 NAT内核模块
CONFIG_PACKAGE_odhcp6c=y           # DHCPv6客户端
CONFIG_PACKAGE_odhcpd-ipv6only=y   # DHCPv6服务器

# 存储相关 - USB和存储设备支持
CONFIG_PACKAGE_automount=y         # 自动挂载
CONFIG_PACKAGE_block-mount=y       # 块设备挂载
CONFIG_PACKAGE_kmod-fs-ext4=y      # ext4文件系统支持
CONFIG_PACKAGE_kmod-fs-vfat=y      # FAT文件系统支持
CONFIG_PACKAGE_kmod-usb-storage=y  # USB存储支持
CONFIG_PACKAGE_kmod-usb-storage-uas=y # USB Attached SCSI支持
CONFIG_PACKAGE_kmod-nls-utf8=y     # UTF-8编码支持

# 网络服务 - 新版本优化组件
CONFIG_PACKAGE_samba4=y           # Samba文件共享（新版本使用samba4）
CONFIG_PACKAGE_samba4-server=y    # Samba服务器
CONFIG_PACKAGE_luci-app-samba4=y  # Samba Web界面
CONFIG_PACKAGE_vsftpd=y           # FTP服务器
CONFIG_PACKAGE_luci-app-vsftpd=y  # FTP Web界面
CONFIG_PACKAGE_smartdns=y         # 智能DNS
CONFIG_PACKAGE_luci-app-smartdns=y # 智能DNS Web界面
CONFIG_PACKAGE_luci-app-upnp=y    # UPnP自动端口映射
CONFIG_PACKAGE_luci-app-turboacc=y # 网络加速
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_flow-offload=y # 流量卸载
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_shortcut-fe=y # 快速路径
CONFIG_PACKAGE_luci-app-turboacc_INCLUDE_dnsforwarder=y # DNS转发
CONFIG_PACKAGE_luci-app-arpbind=y # ARP绑定
CONFIG_PACKAGE_luci-app-cpulimit=y # CPU限制
CONFIG_PACKAGE_luci-app-wechatpush=y # 微信推送
CONFIG_PACKAGE_sqm-autorate=y     # SQM智能限速（新版本）
CONFIG_PACKAGE_luci-app-sqm-autorate=y # SQM Web界面
CONFIG_PACKAGE_sqm-scripts-extra=y # SQM额外脚本
CONFIG_PACKAGE_luci-app-hd-idle=y # 硬盘休眠
CONFIG_PACKAGE_luci-app-familycloud=y # 家庭云

# KMS激活服务
CONFIG_PACKAGE_luci-app-vlmcsd=y  # KMS激活服务器

# 磁盘管理
CONFIG_PACKAGE_luci-app-diskman=y # 磁盘管理工具

# 家长控制
CONFIG_PACKAGE_luci-app-parentcontrol=y # 家长控制

# 中文语言包 - 确保所有界面都有中文
CONFIG_PACKAGE_luci-i18n-turboacc-zh-cn=y # 网络加速中文
CONFIG_PACKAGE_luci-i18n-samba4-zh-cn=y   # Samba中文
CONFIG_PACKAGE_luci-i18n-upnp-zh-cn=y     # UPnP中文
CONFIG_PACKAGE_luci-i18n-smartdns-zh-cn=y # 智能DNS中文

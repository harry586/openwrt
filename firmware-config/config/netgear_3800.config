# Netgear WNDR3800 特殊配置

# ath79架构配置（注意与其他设备不同）
CONFIG_TARGET_ath79=y                      # Atheros AR71xx/AR913x/AR934x 架构
CONFIG_TARGET_ath79_generic=y              # 通用 ath79 目标平台

# 设备特定的内核配置
CONFIG_PACKAGE_kmod-ath9k=y                # Atheros 802.11n 无线驱动
CONFIG_PACKAGE_kmod-ath9k-common=y
CONFIG_PACKAGE_kmod-ath9k-htc=y

# 以太网驱动
CONFIG_PACKAGE_kmod-ag71xx=y               # Atheros AR71xx 以太网驱动

# 闪存布局
CONFIG_TARGET_ROOTFS_PARTSIZE=64           # 根文件系统大小 (MB)

# 特定固件类型
CONFIG_TARGET_ROOTFS_JFFS2=y               # 支持JFFS2文件系统
CONFIG_TARGET_ROOTFS_EXT4FS=y              # 支持EXT4文件系统
CONFIG_TARGET_ROOTFS_INITRAMFS=y           # 支持initramfs

# 引导加载器
CONFIG_PACKAGE_uboot-envtools=y            # U-Boot环境工具
CONFIG_PACKAGE_uboot-mkimage=y             # U-Boot镜像生成工具

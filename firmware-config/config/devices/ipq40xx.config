# 高通IPQ40xx平台专用配置

# ==================== USB 专用驱动 ====================
# 🔧 高通DWC3 USB控制器驱动
CONFIG_PACKAGE_kmod-usb-dwc3-qcom=y
CONFIG_PACKAGE_kmod-phy-qcom-dwc3=y
CONFIG_PACKAGE_kmod-usb-phy-msm=y

# 🔧 IPQ40xx 专用PHY驱动
CONFIG_PACKAGE_kmod-phy-qca-uniphy=y

# ==================== 无线驱动 ====================
# 📡 IPQ40xx 无线驱动
CONFIG_PACKAGE_kmod-ath10k=y
CONFIG_PACKAGE_kmod-ath10k-ct=y
CONFIG_PACKAGE_ath10k-firmware-qca988x=y
CONFIG_PACKAGE_ath10k-firmware-qca9888=y
CONFIG_PACKAGE_ath10k-firmware-qca9984=y
CONFIG_PACKAGE_ath10k-firmware-qca4019=y

# 📡 5GHz频段支持
CONFIG_PACKAGE_kmod-ath10k-smallbuffers=y

# ==================== 网络加速 ====================
# ⚡ 硬件NAT加速
CONFIG_PACKAGE_kmod-qca-nss-drv=y
CONFIG_PACKAGE_kmod-qca-nss-ecm=y

# ==================== GPIO/按钮支持 ====================
CONFIG_PACKAGE_kmod-gpio-button-hotplug=y
CONFIG_PACKAGE_reset-button=y

# 通用USB配置 - 适用于所有平台

# 🚨 USB 完全修复通用配置 - 开始
# 🟢 USB 核心驱动 - 基础必须
CONFIG_PACKAGE_kmod-usb-core=y

# 🟢 USB 主机控制器驱动 - 通用支持
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-ehci=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb-uhci=y
CONFIG_PACKAGE_kmod-usb2-pci=y
CONFIG_PACKAGE_kmod-usb-ohci-pci=y

# 🟢 USB 3.0扩展主机控制器接口驱动 - 支持USB 3.0高速数据传输
CONFIG_PACKAGE_kmod-usb-xhci-hcd=y
CONFIG_PACKAGE_kmod-usb-xhci-pci=y
CONFIG_PACKAGE_kmod-usb-xhci-plat-hcd=y

# 🟢 USB 存储驱动 - 核心功能
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-usb-storage-extras=y
CONFIG_PACKAGE_kmod-usb-storage-uas=y

# 🟢 SCSI 支持 - 硬盘和U盘必需
CONFIG_PACKAGE_kmod-scsi-core=y
CONFIG_PACKAGE_kmod-scsi-generic=y

# 🟢 文件系统支持 - 完整文件系统兼容
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_kmod-fs-autofs4=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
# CONFIG_PACKAGE_kmod-fs-ntfs is not set
# CONFIG_PACKAGE_ntfs-3g is not set
# CONFIG_PACKAGE_ntfs-3g-utils is not set
# CONFIG_PACKAGE_ntfs3-mount is not set

# 🟢 编码支持 - 多语言文件名兼容
CONFIG_PACKAGE_kmod-nls-utf8=y
CONFIG_PACKAGE_kmod-nls-cp437=y
CONFIG_PACKAGE_kmod-nls-iso8859-1=y
CONFIG_PACKAGE_kmod-nls-cp936=y

# 🟢 自动挂载工具 - 即插即用支持
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_automount=y

# 🟢 USB 工具和热插拔支持 - 设备管理
CONFIG_PACKAGE_usbutils=y
CONFIG_PACKAGE_lsusb=y
CONFIG_PACKAGE_udev=y

# 🟢 USB串口支持 - 扩展功能
CONFIG_PACKAGE_kmod-usb-serial=y
CONFIG_PACKAGE_kmod-usb-serial-ftdi=y
CONFIG_PACKAGE_kmod-usb-serial-pl2303=y

